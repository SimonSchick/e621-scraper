{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": [
        "es2019"
      ],
      "outDir": "./lib",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "experimentalDecorators": true,
      "noErrorTruncation": true,
      "types": [
        "node"
      ]
    },
    "include": [
      "src"
    ]
  }
